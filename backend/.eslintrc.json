{
  "env": {
    "browser": false,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier", "jest"],
  "ignorePatterns": ["dist"],
  "rules": {
    "prettier/prettier": "error",
    "no-param-reassign": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      }
    }
  }
}
